{
	"compilerOptions": {
		"baseUrl": ".",
		"module": "commonjs",
		"moduleResolution": "node",
		"outDir": "dist",
		"rootDir": ".",
		"target": "es2017",
		"watch": false,
		"allowSyntheticDefaultImports": true,
		"emitDecoratorMetadata": true,
		"esModuleInterop": true,
		"experimentalDecorators": true,
		"noImplicitAny": true,
		"resolveJsonModule": true,
		"sourceMap": true,
		"strictBindCallApply": true,
		"strictFunctionTypes": true,
		"strictNullChecks": false,
		"skipLibCheck": true,
		"lib": [
			"dom",
			"es2015",
			"es2016"
		],
		"types": [
			"jest"
		],
		"typeRoots": [
			"../node_modules/@types",
			"node_modules/@types"
		]
	},
	"include": [
		"**/*.ts"
	],
	"exclude": [
		"**/coverage/**",
		"**/dist/**",
		"**/node_modules/**"
	]
}
