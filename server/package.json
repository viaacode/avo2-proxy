{
  "name": "@studiohyperdrive/nodejs-boilerplate-server",
  "version": "0.0.0",
  "description": "Server directory for the Node.js boilerplate.",
  "main": "index.ts",
  "scripts": {
    "start": "npm run serve",
    "serve": "ts-node-dev --transpileOnly --poll --inspect=0.0.0.0:5858 -- index.ts",
    "prebuild": "npm run clean:build",
    "build": "tsc -p tsconfig.json",
    "lint": "tslint -c tslint.json -p tsconfig.json -t stylish",
    "lint:fix": "npm run lint -- --fix",
    "pretest": "npm run clean:coverage",
    "test": "jest --config jest.config.js --runInBand",
    "test:watch": "npm run test -- --watchAll",
    "posttest": "npm run lint",
    "clean:build": "rm -rf ./dist",
    "clean:coverage": "rm -rf ./test/coverage",
    "open:coverage": "open ./test/coverage/lcov-report/index.html"
  },
  "dependencies": {
    "@studiohyperdrive/logger": "1.1.1",
    "@viaa/avo2-types": "^1.6.0",
    "apollo-boost": "^0.4.4",
    "axios": "0.19.0",
    "body-parser": "1.19.0",
    "cookie-parser": "1.4.4",
    "cors": "^2.8.5",
    "elasticsearch-sanitize": "2.0.0",
    "express": "4.17.1",
    "express-session": "1.15.6",
    "express-useragent": "^1.0.13",
    "graphql": "^14.4.2",
    "helmet": "3.20.0",
    "joi": "14.3.1",
    "lodash": "^4.17.15",
    "module-alias": "2.2.1",
    "node-cron": "^2.0.3",
    "passport-saml": "^1.1.0",
    "public-ip": "^3.2.0",
    "query-string": "^6.8.1",
    "ramda": "0.26.1",
    "reflect-metadata": "0.1.13",
    "remove-accents": "0.4.2",
    "saml2-js": "^2.0.3",
    "sanitize-html": "^1.20.1",
    "session-file-store": "1.2.0",
    "swagger-express-ts": "1.0.1",
    "swagger-ui-express": "4.0.7",
    "typescript-rest": "2.2.0",
    "uuid": "3.3.3"
  },
  "devDependencies": {
    "@types/body-parser": "1.17.1",
    "@types/cookie-parser": "1.4.2",
    "@types/dotenv": "6.1.1",
    "@types/express": "4.17.1",
    "@types/helmet": "0.0.44",
    "@types/jest": "24.0.18",
    "@types/joi": "14.3.3",
    "@types/node": "12.7.2",
    "@types/ramda": "0.26.20",
    "@types/sinon": "7.0.13",
    "@types/sinon-express-mock": "1.3.7",
    "@types/supertest": "2.0.8",
    "@types/swagger-ui-express": "3.0.1",
    "@types/uuid": "3.4.5",
    "@types/axios": "0.14.0",
    "@types/cors": "2.8.5",
    "@types/express-session": "^1.15.11",
    "@types/express-useragent": "^0.2.22",
    "@types/lodash": "^4.14.138",
    "@types/node-cron": "^2.0.2",
    "@types/saml2-js": "^1.6.7",
    "dotenv": "8.1.0",
    "jest": "24.8.0",
    "jest-extended": "0.11.2",
    "sinon": "7.4.1",
    "sinon-express-mock": "2.2.1",
    "supertest": "4.0.2",
    "ts-jest": "24.0.2",
    "ts-node-dev": "1.0.0-pre.42",
    "tslint": "5.18.0",
    "tslint-config-airbnb": "5.11.1",
    "typescript": "3.5.2"
  },
  "_moduleAliases": {
    "@app": "dist/src/app",
    "@config": "dist/src/config",
    "@modules": "dist/src/modules",
    "@mocks": "dist/test/mocks",
    "@pkg": "dist/package.json",
    "@shared": "dist/src/shared",
    "@test": "dist/test"
  },
  "license": "ISC"
}
